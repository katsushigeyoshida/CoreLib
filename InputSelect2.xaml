<Window x:Class="CoreLib.InputSelect2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoreLib"
        mc:Ignorable="d"
        Title="InputSelect2" Height="130" Width="300" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <Label Name="lbTitle1" Content="Label" Margin="10,5,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <ComboBox Name="cbSelectList" Margin="100,5,10,0" VerticalAlignment="Top" SelectionChanged="cbSelectList_SelectionChanged"/>
        <Label Name="lbTitle2" Content="Label" Margin="10,32,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="tbEditText" Margin="100,35,10,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top"/>
        <Button x:Name="btOK" Content="OK" Width="40" Margin="0,0,60,10" IsDefault="True" HorizontalAlignment="Right" Height="20" VerticalAlignment="Bottom" Click="btOK_Click" />
        <Button x:Name="btCancel" Content="Cancel" Width="40" Margin="0,0,10,10" IsCancel="True" HorizontalAlignment="Right" Height="20" VerticalAlignment="Bottom" Click="btCancel_Click"/>

    </Grid>
</Window>
