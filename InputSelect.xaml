<Window x:Class="CoreLib.InputSelect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoreLib"
        mc:Ignorable="d"
        Title="InputSelect" Height="60" Width="300" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <ComboBox Name="cbText" Margin="0,0,100,0" IsEditable="True" VerticalAlignment="Center" />
        <Button Name="btOK" Content="OK" Margin="0,0,50,0" Width="50" IsDefault="True" HorizontalAlignment="Right" VerticalAlignment="Center" Click="btOK_Click" />
        <Button Name="btCancel" Content="Cancel" Margin="0,0,00,0" Width="50" IsCancel="True" VerticalAlignment="Center" HorizontalAlignment="Right" Click="btCancel_Click" />
    </Grid>
</Window>
